<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sel_shift_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_gray"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="2017-12-12"
        android:textSize="12sp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Data_Item_Detail_LL">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="客户名称:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_name"
                    style="@style/Data_Item_Detail_Content"
                    android:text="亚青"/>

            </LinearLayout>

            <View
                style="@style/Line_1dp"/>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="交接单号:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_dh"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="2120171026170901"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="上次交接时间:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_last_time"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="2017-09-28 17:17:30"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="销售金额:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_xs_money"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥422.12"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="退货金额:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_th_money"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥100.00"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="优惠券金额:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_yhq_money"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥1.00"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="实收金额:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_sh_money"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥20.00"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="销售单数:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_xs_number"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="200"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="退货单数:"/>

                <TextView
                    android:id="@+id/tv_sel_shift_th_number"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="20"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"
                    android:text="操作员:"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_sel_shift_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pay"
                    android:layout_centerInParent="true"
                    android:text="13814689521"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                style="@style/Line_1dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_line"/>

            <LinearLayout
                style="@style/Data_Item_Detail_LL"
                android:layout_height="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="查看详情"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_more"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>