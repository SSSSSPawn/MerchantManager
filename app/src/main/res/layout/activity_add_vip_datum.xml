<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.iotek.merchantmanager.view.AppBar
        android:id="@+id/appBar"
        style="@style/AppBar"
        android:background="@color/becPrimaryBlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:layout_weight="2"
                android:text="会员编号(手机号)"/>

            <EditText
                android:id="@+id/et_vip_datum_membTel"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:text="会员姓名"/>

            <EditText
                android:id="@+id/et_vip_datum_name"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:singleLine="true"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="会员等级"/>

            <TextView
                android:id="@+id/tv_vip_datum_level"
                style="@style/Text_Name.Text_Content.16sp"
                android:drawableRight="@drawable/ic_more"
                android:gravity="center|right"
                android:hint="请选择"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="身份证号码"/>

            <EditText
                android:id="@+id/et_vip_datum_card_id"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="是否启用密码"/>

            <TextView
                android:id="@+id/tv_vip_datum_pswFlag"
                style="@style/Text_Name.Text_Content.16sp"
                android:drawableRight="@drawable/ic_more"
                android:gravity="center|right"
                android:hint="请选择"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="会员密码"/>

            <EditText
                android:id="@+id/et_vip_datum_psw"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="会员性别"/>

            <TextView
                android:id="@+id/tv_vip_datum_sex"
                style="@style/Text_Name.Text_Content.16sp"
                android:drawableRight="@drawable/ic_more"
                android:gravity="center|right"
                android:hint="请选择"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="出生日期"/>

            <TextView
                android:id="@+id/tv_vip_datum_birthday"
                style="@style/Text_Name.Text_Content.16sp"
                android:drawableRight="@drawable/ic_more"
                android:gravity="center|right"
                android:hint="请选择"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="联系邮箱"/>

            <EditText
                android:id="@+id/et_vip_datum_mail"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                style="@style/Text_Name"
                android:gravity="center_vertical"
                android:text="联系地址"/>

            <EditText
                android:id="@+id/et_vip_datum_address"
                style="@style/Text_Name.Text_Content.16sp"
                android:background="@null"
                android:gravity="center|right"
                android:hint="请输入"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/becPrimaryBlue"
        android:text="确定"
        android:textColor="@drawable/selector_btn_white2gray"
        android:textSize="18sp"/>


</LinearLayout>