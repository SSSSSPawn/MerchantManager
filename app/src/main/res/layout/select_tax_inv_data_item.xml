<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_SelectTaxInvData_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_gray"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="2017-12-12"
        android:textSize="12sp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Data_Item_Detail_LL">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="流水号:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_ls"
                    style="@style/Data_Item_Detail_Content"
                    android:text="1025120155"/>

            </LinearLayout>

            <View
                style="@style/Line_1dp"/>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="商户名称:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_comp"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="亚青"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="开票状态:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_kp_type"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="成功"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="发票类型:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_fp_type"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="蓝票"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="购方单位名称:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_name"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="个人"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="税额:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInvData_se"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥20.00"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="金额:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInv_je"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="¥210.00"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="发票代码:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInv_code"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="03002152455"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Data_Item_Detail_LL_Top8dp">

                <TextView
                    style="@style/Data_Item_Detail_Txt_Name"
                    android:text="发票号码:"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInv_number"
                    style="@style/Data_Item_Detail_Txt_Content"
                    android:text="2005289215"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"
                    android:text="总金额:"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_SelectTaxInv_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pay"
                    android:layout_centerInParent="true"
                    android:text="¥2000.00"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                style="@style/Line_1dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_line"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>